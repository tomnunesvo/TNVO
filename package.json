{
  "name": "tnvo",
  "version": "0.0.1",
  "description": "Tom Nunes Voice Over Website",
  "main": "index.js",
  "scripts": {
    "start": "run-s build serve",
    "build": "run-s clean build:each",
    "build:each": "run-p sass html js",
    "clean": "del-cli dist",
    "html": "node build/html.js",
    "js": "rollup --config build/rollup.config.js --sourcemap",
    "sass": "node-sass src/scss/application.scss --output-style expanded --source-map true --precision 6 dist/css/application.css",
    "serve": "http-server ./dist --silent -p 3000 -c-1 -o",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "nodemon -w src -e html -d 3 -x \"npm run html\"",
    "watch:js": "nodemon -w src -e js -d 3 -x \"npm run js\"",
    "watch:scss": "nodemon -w src -e scss -d 3 -x \"npm run sass\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomnunesvo/TNVO.git"
  },
  "author": "Tom Nunes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomnunesvo/TNVO/issues"
  },
  "homepage": "https://github.com/tomnunesvo/TNVO#readme",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "del": "^3.0.0",
    "del-cli": "^1.1.0",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-json": "^3.1.0"
  }
}
